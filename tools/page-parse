# grab most recent version tag
curver="$( git tag -l \
  | grep '^[0-9]\+.[0-9]\+.[0-9]\+$' \
  | tail -n1
)"

curver_date="$( date "+%d %b %Y" \
  --date="$( git for-each-ref \
    --format='%(*authordate)' \
    "refs/tags/$curver" \
    | cut -d' ' -f1-5 \
  )"
)"


# TODO: Both sed and gawk are unnecessary; it was just the most convenient
# solution
gawk '
  match( $0, /^ *<!--%inc (.*?) *--> *$/, arr ) {
    system( "cat " arr[1] )
    next
  }
  { print }
' \
  | sed "
    s/<!--%curver-->/$curver/g;
    s/<!--%curver-date-->/$curver_date/g;
  "
