major="$1"
minor="$2"
rev="$3"
suffix="${4:+-$4}"

version="$major.$minor.$rev$suffix"

# pre-formatted suffix
fsuffix=
[ -n "$suffix" ] && fsuffix="-$suffix"

# generate version.js
cat version.js.tpl | sed "
  s/@MAJOR@/$major/;
  s/@MINOR@/$minor/;
  s/@REV@/$rev/;
  s/@SUFFIX@/${suffix#-}/;
" > ../lib/version.js

# update configure script by replacing the second argument of AC_INIT
sed -i '/^AC_INIT/s/, \[[^]]\+\]/, ['$version']/' ../configure.ac
